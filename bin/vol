#!/bin/bash
#
# Change volume settings

DEVICE=1

usage() {
  echo "usage: vol [<num>] [-<num>] [+<num>] [toggle]"
}

set() {
  pactl set-sink-volume $DEVICE $1%
}

toggle() {
  pactl set-sink-mute $DEVICE toggle
}

help='false'

for arg; do
  case $arg in
    *[0-9]) set $arg ;;
    toggle) toggle ;;
    *) help='true'
  esac
done

if [[ $# -eq 0 ]] || [[ "${help}" = 'true' ]]; then
  usage
fi
