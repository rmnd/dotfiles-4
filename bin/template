#!/bin/bash
#
# File templates.

bash() {
  cat << EOF
#!/bin/bash
EOF
}

c() {
  cat << EOF
int main(void) {
  return 0;
}
EOF
}

cc() {
  cat << EOF
int main() {
  return 0;
}
EOF
}

css() {
  cat << EOF
* {
  border: 0;
  margin: 0;
  padding: 0;
}
EOF
}

editorconfig() {
  cat << EOF
[*]
end_of_line = fl
insert_final_newline = true
indenx_style = space
indent_size = 2

[Makefile]
indent_style = tab
EOF
}

h() {
  cat << EOF
#ifndef ${@}
#define ${@}

#endif // ${@}
EOF
}

html() {
  cat << EOF
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <title>${@}</title>
  </head>
  <body>
  </body>
</html>
EOF
}

java() {
  cat << EOF
public class ${@} {
}
EOF
}

package-json() {
  cat << EOF
{
  "name": "${@}",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "author": {
    "name": "Carl Enlund",
    "email": "carl.enlund@protonmail.com",
    "url": "http://crl.io"
  }
}
EOF
}

if [[ $# -eq 0 ]]; then
  cat << EOF
usage: template <name> [args]

names:
 - bash
 - c
 - cc
 - css
 - editorconfig
 - h [header name]
 - html [page title]
 - java [class name]
 - package.json [name]
EOF
  exit 1
fi

"${1/./-}" "${@:2}"
